{
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "camelcase": ["error"],
      "eqeqeq": ["error"],
      "no-var": ["error"],
      "prefer-const": ["error"],
      "func-style": ["error", "declaration"],
      "prefer-arrow-callback": ["error"],
      "quotes": ["error", "single", { "allowTemplateLiterals": true }],
      "indent": ["error", 2]
    }
  }
  